{{#if showingAdminForm}}
  <h4>New Admin:</h4>
  <form>
    <div class="form-group">
      <label for="username">Username</label>
      {{input value=username id="username" class='form-control'}}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input value=password type="password" id="password" class='form-control'}}
    </div>
    <button {{action 'addAdmin'}} class="btn btn-primary">Add Admin</button>
  </form>
{{else}}
  <button {{action 'showAdminForm'}} class="btn btn-primary">Add a new Admin</button>
{{/if}}
